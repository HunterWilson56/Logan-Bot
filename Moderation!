\\
***Keep In Mind That Your Bot Must Be Able To Manage Messages For This To Work!***
\\
const Discord = require('discord.js');  
const bot = new Discord.Client();

bot.on('ready', () => {
    bot.user.setStatus('online');
   });
   
bot.on("message", function(message)  {
    
    if(message.content.includes("Ass")) {
        message.delete();
        message.reply("Please do not say that!")
    }

    
    if(message.content.includes("ass")) {
        message.delete();
        message.reply("Please do not say that!")
    }

    
    if(message.content.includes("bitch")) {
        message.delete();
        message.reply("Please do not say that!")
    
    }

    
    if(message.content.includes("Bitch")) {
        message.delete();
        message.reply("Please do not say that!")
    }

    
    if(message.content.includes("Nigger")) {
        message.delete();
        message.reply("Please do not say that!")
    }

    
    if(message.content.includes("nigger")) {
        message.delete();
        message.reply("Please do not say that!")
    }
});

bot.on("message", function(message)  {
    
    if(message.content.includes("Shit")) {
        message.delete();
        message.reply("Please do not say that!")

    
    
 }

    if(message.content.includes("shit")) {
        message.delete();
        message.reply("Please do not say that!")
    }


});

bot.login('');
